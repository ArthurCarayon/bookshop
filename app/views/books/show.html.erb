<p style="color: green"><%= notice %></p>

<%= render @book %>

<div>
  <% if current_user && @book.user_id == current_user.id || current_user.admin? %>
    <%= link_to "Edit this book", edit_book_path(@book) %> | 
    <%= link_to "Destroy this book", @book, method: :delete %>
  <% end %>

  <br><br>

  <%= link_to "Back to books", books_path %>
</div>
