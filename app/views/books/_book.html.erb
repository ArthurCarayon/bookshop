<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= book.description %>
  </p>

  <p>
    <strong>Isbn:</strong>
    <%= book.isbn %>
  </p>

  <p>
    <strong>Seller:</strong>
    <%= book.user.id %>
  </p>

  <% if book.thumbnail.present? %>
      <%= image_tag book.thumbnail.variant(resize_to_limit: [200, 200]) %>
  <% end %>

</div>
