<%= content_for :recaptcha_js do %>
  <%= include_recaptcha_js %>
<% end %>

<%= form_with model: comment, id: "com-form" do |form| %>

  <%= form.hidden_field :book_id %>

  <div class="layout_fields">
    <div class="author_message">
      <%= form.label :comment, style: "display: block" %>
      <%= form.text_area :comment %>
    </div>

    <div class="div author_info">
      <div class="field">
        <%= form.label :author, style: "display: block" %>
        <%= form.text_field :author %>
      </div>

      <div class="field">
        <%= form.label :author_email, style: "display: block" %>
        <%= form.text_field :author_email %>
      </div>
      

      <div>
        <%= form.submit t('general.submit'), id: "btnSubmit", class: 'g-recaptcha, btn primary', data: {'sitekey': '6Lfgwf8iAAAAAM3p4fF-g0H9ShHJA9H8ijb7tpwf', 'callback': 'onSubmit', 'action': 'submit' } %>
        <div class="disclaimer-captcha">
          This site is protected by reCAPTCHA and the Google
          <a href="https://policies.google.com/privacy">Privacy Policy</a> and
          <a href="https://policies.google.com/terms">Terms of Service</a> apply.
        </div>
      </div>
    </div>
  </div>
  <script>
      function onSubmit(token) {
        document.getElementById("com-form").submit();
      }
    </script>
<% end %>
